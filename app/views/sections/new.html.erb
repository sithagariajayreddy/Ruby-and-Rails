<%= error_messages_for(@section) %>
<div class="section new">
<h2> Create Section</h2>

  <%= form_for(:section, :url => {:action => 'create', :page_id => @page.id}) do |f| %>

  <table summary="section form fields">
    <tr>
      <th><%= f.label(:page_id)%></th>
      <td><%= f.select(:page_id, @pages.map{|p| [p.name,p.id]} )%></td>
    </tr>
    <tr>
      <th><%= f.label(:name)%></th>
      <td><%= f.text_field(:name)%></td>
    </tr>
    <tr>
      <th><%= f.label(:position)%></th>
      <td><%= f.select(:position, 1..@section_count)%></td>
    </tr>
    <tr>
      <th><%= f.label(:visible)%></th>
      <td><%= f.check_box(:visible)%></td>
    </tr>
    <tr>
      <th><%= f.label(:content_type)%></th>
      <td><%= f.radio_button(:content_type, 'text')%> Text</td>
      <td><%= f.radio_button(:content_type, 'HTML')%> HTML</td>
    </tr>
    <tr>
      <th><%= f.label(:content)%></th>
      <td><%= f.text_area(:content, :size => "35x10")%></td>
    </tr>
     <tr>
      <th><%= f.label(:created_at)%></th>
      <td><%= f.datetime_select(:created_at, :order => [:month, :day, :year])%></td>
    </tr>
  </table>

  <div class="form_buttons">
    <%= submit_tag("Create Section")%>
  </div>
  <%end%>
</div>

<%= link_to("Back To List", {:action => 'index', :page_id => @page.id}, :class => 'back to link')%>
